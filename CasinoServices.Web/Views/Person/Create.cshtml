@model CasinoServices.Domain.Entities.Person

<h1>Додати нового покупця</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name">Ім'я</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Електронна пошта</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Номер телефону</label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address">Адреса</label>
        <input asp-for="Address" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Зберегти</button>
</form>
